@model WatchShop.Models.Item

@{
    ViewBag.Title = "DeleteItem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DeleteItem</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <p style="font-size:25px"><strong>Brand: </strong>@Html.DisplayFor(model => model.Brand.name)</p>

        <p style="font-size:25px"><strong>Category: </strong>@Html.DisplayFor(model => model.Category.name)</p>

        <p style="font-size:25px"><strong>Watch Name: </strong>@Html.DisplayFor(model => model.name)</p>

        <p style="font-size:25px"><strong>Price: </strong>@Html.DisplayFor(model => model.price)</p>

        <p ><strong>Image: </strong><img src="~/assets/img/gallery/@Html.DisplayFor(model => model.image) " height="250" width="250"/></p>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Items")
        </div>
    }
</div>
