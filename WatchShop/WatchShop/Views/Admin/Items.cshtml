@model IEnumerable<WatchShop.Models.Item>

@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Items</h2>

<p>
    <button>@Html.ActionLink("Create Item", "Create", "Item")</button>
</p>

<section class="popular-items latest-padding">
    <div class="tab-content" id="nav-tabContent">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center">
                        <div class="popular-img">
                            <img src="~/assets/img/gallery/@Html.DisplayFor(modelItem => item.image)" alt="" height="200">

                            <div class="favorit-items">
                                <a href="/Admin/DeleteItem/@item.id"><img src="~/assets/img/adapt_icon/criss-cross.png" style="width:50px; height:auto" /></a>
                            </div>
                        </div>
                        <div class="popular-caption">
                            <h3><a href="/Admin/EditItem/@item.id">@Html.DisplayFor(modelItem => item.name)</a></h3>
                            <span>@Html.DisplayFor(modelItem => item.price) VND</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


