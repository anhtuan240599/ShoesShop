@model WatchShop.Models.Item

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Detail</h2>
<p>
    @Html.ActionLink("Back to List", "Index", "Home")
</p>
<div class="product_image_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="product_img_slide owl-carousel">
                    <div class="single_product_img">
                        <img src="~/assets/img/gallery/@Html.DisplayFor(modelItem => modelItem.image)" alt="#" class="img-fluid" height="278">
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="single_product_text text-center">
                    <h3>
                        @Html.DisplayFor(modelItem => modelItem.name)
                    </h3>
                    <img src="~/assets/img/gallery/@Html.DisplayFor(modelItem => modelItem.image)" alt="#" class="img-fluid" style="max-height: 278px">
                    <h4>Brand: @Html.DisplayFor(modelItem => modelItem.Brand.name)</h4>
                    <h4>Category: @Html.DisplayFor(modelItem => modelItem.Category.name)</h4>
                    <div class="card_area">
                        <div class="product_count_area">
                            <p style="font-size:25px"> Total </p>
                            <p style="font-size:25px">@Html.DisplayFor(modelItem => modelItem.price) VND</p>
                        </div>
                        <div class="add_to_cart" style="font-size:25px">
                            <a href="@Url.Action("AddToCart", "Cart", new { @id = Model.id, @Url = Request.Url.ToString() })" class="btn subscribe">add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
